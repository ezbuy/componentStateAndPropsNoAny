{
    "compilerOptions": {
      "target": "es6",
      "module": "commonjs",
      "moduleResolution": "node",
      "sourceMap": true,
      "emitDecoratorMetadata": true,
      "experimentalDecorators": true,
      "noImplicitAny": true,
      "suppressImplicitAnyIndexErrors": true,
      "outDir": "./dist",
      "removeComments": true
    },
    "include": [
      "src/**/*",
      "test/**/*"
    ],
    "exclude": [
      "node_modules"
    ]
  }